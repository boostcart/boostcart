{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"globalEnv": [
		"DATABASE_URL",
		"DIRECT_URL",
		"BASE_URL",
		"AUTH_SECRET",
		"AUTH_GOOGLE_ID",
		"AUTH_GOOGLE_SECRET",
		"RESEND_API_KEY",
		"EMAIL_FROM",
		"R2_ACCOUNT_ID",
		"R2_ACCESS_KEY_ID",
		"R2_SECRET_ACCESS_KEY",
		"R2_BUCKET_NAME",
		"R2_ENDPOINT",
		"R2_CUSTOM_DOMAIN",
		"REDIS_URL",
		"DOMAIN_WEBHOOK_SECRET",
		"NODE_ENV",
		"VERCEL_URL",
		"JWT_SECRET",
		"COOKIE_DOMAIN"
	],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check": {
			"dependsOn": ["^check"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"db:generate": {
			"cache": false
		},
		"db:push": {
			"cache": false
		},
		"db:migrate": {
			"cache": false
		},
		"typecheck": {
			"dependsOn": ["^typecheck"]
		}
	}
}
